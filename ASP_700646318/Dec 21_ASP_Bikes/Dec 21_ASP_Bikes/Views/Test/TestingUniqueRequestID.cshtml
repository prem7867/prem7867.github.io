
@model IEnumerable<Dec_21_ASP_Bikes.Models.RequestCycle>




@{
    ViewBag.Title = "Requested Bicycle";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grid = new WebGrid(source: Model, canPage: true, selectionFieldName: "SelectedRow");
    grid.Pager(WebGridPagerModes.All);
}

@if (grid.HasSelection)
{
    var Data = grid.SelectedRow;
}

<h2>Details of Requested Bicycle</h2>
<br />

<h2>Login</h2>

@using (Html.BeginForm())

{


    @Html.AntiForgeryToken()


    @grid.GetHtml(
                    tableStyle: "webgrid-table",
                    headerStyle: "webgrid-header",
                    footerStyle: "webgrid-footer",
                    alternatingRowStyle: "webgrid-alternating-row",
                    rowStyle: "webgrid-row-style",
                    columns: grid.Columns(
                        //here i will add column for serial no
                        grid.Column(header: "Serial No", format:@<text><div>@(item.WebGrid.Rows.IndexOf(item) + 1)</div></text>),
