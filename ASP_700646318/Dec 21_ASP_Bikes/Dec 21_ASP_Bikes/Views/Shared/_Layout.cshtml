<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UCM Bikes </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UCM Bikes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">

                <nav>
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("AboutUs", "AboutUs", "Home")</li>
                        <li>@Html.ActionLink("ContactUs", "ContactUs", "Home")</li>
                       


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("CImages", "DisplayImage", "Image")</li>
                            <li>@Html.ActionLink("CDetails", "CycleList", "CycleDetailsList")</li>
                            <li>@Html.ActionLink("Cycle Borrowed", "UserProfileWithCycleDetails1", "EligibilityAndUserProfile")</li>
                            @*<li>@Html.ActionLink("R U Eligible?", "RestrictUserFromRequestingAnotherCycle", "EligibilityAndUserProfile")</li>*@

                          


                        if (User.Identity.Name == ("admin"))
                        {

                                <li>@Html.ActionLink("SendEmail", "Form", "SendEmail")</li>
                                <li>@Html.ActionLink("List", "Report_Registration", "Report")</li>
                                <li>@Html.ActionLink("Insert", "AddImage", "Image")</li>
                                @*<li>@Html.ActionLink("Delete", "DeleteList", "CycleDetailsList")</li>*@
                                <li>@Html.ActionLink("Request", "RequestCycleAdminInsertion", "InsertRequestForCycle")</li>
                            }

                            <li right style="float: right">@Html.ActionLink("Logout", "Logout", "Account")</li>
                            <li><a href="@Url.Action("UserProfile", "Account")">Welcome @User.Identity.Name</a></li>

                        }
                        else
                        {
                            <li right style="float: right">@Html.ActionLink("Login", "Login", "Account")</li>
                            <li right style="float: right">@Html.ActionLink("Register", "Register", "Account")</li>
                        }

                    </ul>


                </nav>


            </div>

        </div>
    </div>
    <br />

    <br/>

    <br />

    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - UCM Bike Management</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--Add the following line so that the date picker works for Date of Birth field-->
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.js")" type="text/javascript"></script>


</body>
</html>
