                        // grid.Column(columnName: "CycleType", header: "Type"),
                        grid.Column(columnName: "RequestID", header: "RequestID"),
                        grid.Column(columnName: "CycleID", header: "CycleID"),
                        grid.Column(columnName: "FromDate", header: "Start Date"),
                        grid.Column(columnName: "ToDate", header: "End Date"),
